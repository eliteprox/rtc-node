    "version": "0.2.0",
    "configurations": [

        {
            "name": "Create and Stream to WHIP",
            "type": "debugpy",
            "request": "launch",
            "program": "stream_whip.py",
            "console": "integratedTerminal",
            "args": [
                "--pipeline-config", "./pipeline_config.json",
                "--video-file", "./test.mp4",
                "--loop"
            ],
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "StreamProcessor API Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server/app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--host", "127.0.0.1",
                "--port", "8896",
                "--pipeline-config", "./pipeline_config.json",
                "--video-file", "${workspaceFolder}/test.mp4",
                "--log-level", "debug"
            ],
            "justMyCode": false,
            "python": "${command:python.interpreterPath}"
        }
    ]
}